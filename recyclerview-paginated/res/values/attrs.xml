<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PaginatedRecyclerView">
        <!--
        Set the offset from the end of the list at which onPaginate event needs to be triggered, default is 5.
        Follows convention of `AutoCompleteTextView.completionThreshold`.
        -->
        <attr name="paginationThreshold" format="integer" />

        <!-- Class name of placeholder adapter, instance of the class will be created reflectively. -->
        <attr name="placeholderAdapter" format="string" />
    </declare-styleable>
</resources>